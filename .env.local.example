# MongoDB – obține URI din https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/magazin?retryWrites=true&w=majority

# Cloudinary – din https://cloudinary.com/console
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Secret pentru sesiunea admin (generează un string aleatoriu lung)
ADMIN_SESSION_SECRET=un_string_foarte_lung_si_aleatoriu_aici

# Pentru server.js (Express): sesiuni admin
# SESSION_SECRET=un_string_aleatoriu_lung_pentru_sesiuni

# Opțional: folosește serverul Express (server.js) ca backend pentru produse
# Pornește serverul cu: node server.js (rulează pe port 3001)
# EXTERNAL_PRODUCTS_API_URL=http://localhost:3001
